@model Admin.Models.BOMFields
@{
    ViewBag.Title = "Bill of Materials";
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<style>
    .uppercase {
        text-transform: uppercase;
    }
</style>
<body style="background-color: #f5f5f7;">
    @using (Html.BeginForm("Main", "BOM", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br />
        <table style="border-top:none;">
            <tr>
                <td>
                    @Html.LabelFor(model => model.SP_Part_No)
                    @Html.EditorFor(model => model.SP_Part_No, new { htmlAttributes = new { @class = "form-control uppercase", required = "required" } })
                </td>
                <td>
                    <button class="btn btn-default" type="submit" style="margin-top:50%;margin-left:20%;">Insert</button>
                </td>
            </tr>
            <tr>
                <td><p class="text-danger">@ViewBag.ErrorMessage</p></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.SP_Description)
                </td>
            </tr>
            <tr>
                <td>
                    @{
                        foreach (var item in ViewBag.item)
                        {
                            if (item.Part_No1 == null)
                            {
                                @item.SP_Description;
                            }
                            else
                            {
                                break;
                            }
                        }
                    }
                </td>
            </tr>
        </table>

        <table style="border-top:none;">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Part_No)
                    @Html.EditorFor(model => model.Part_No, new { htmlAttributes = new { @class = "form-control uppercase", @id = "part_no" } })
                </td>
                <td style="padding-left: 1%;">
                    @Html.LabelFor(model => model.Quantity)
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control uppercase", @id = "quantity" } })
                </td>
                <td>
                    <br />
                    <button class="btn btn-default" id="add_btn" type="submit" style="margin-top: 15%; margin-left: 20%;">Add</button>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td>
                    <p id="value"></p>
                </td>
            </tr>
        </table>
        <div class="panel panel-default">
            @*<div class="panel-heading">
                    <h3 class="panel-title"><strong>Order summary</strong></h3>
                </div>*@
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-condensed" id="tbl">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Part_No)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                            </tr>
                        </thead>
                        @{
                            foreach (var item in ViewBag.item)
                            {
                                if (item.Part_No1 == null)
                                {
                                    continue;
                                }
                                else
                                {
                                    <tr>
                                        <td>@item.Part_No1</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Quantity1</td>
                                    </tr>
                                }
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    }
    @using (Html.BeginForm("Order", "BOM", FormMethod.Post))
    {
        <div class="text-danger" style="text-align:center;">
            @ViewBag.BOM
        </div>
        <div>
            <div class="col-md-offset-8 col-md-10" style="margin-top:2%;">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    }
</body>

<script>
    document.addEventListener('keydown', function (event) {
        if (event.keyCode === 9) {

            var model = new Object();
            model.Part_to_Descp = document.getElementById("part_no").value;

            jQuery.ajax({
            type: "POST",
            url: "@Url.Action("Partno_to_Descp")",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ name: model }),
                success: function (data) {
                    document.getElementById("value").innerHTML = data;
            },
            failure: function (errMsg) {
                alert(errMsg);
            }
            });
        }
    });
</script>