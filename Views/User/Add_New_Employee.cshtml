@model Admin.Models.UserModel
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap-4.0.0.min.css">
    <script src="~/Scripts/bootstrap-4.0.0.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    @*<link rel="stylesheet" href="~/Content/Purchase.css" />*@
</head>
<body style="background-color: #f5f5f7;">
    <div class="form-horizontal" style="border: 1px solid #F0F3FF; box-sizing: border-box; box-shadow: 0px 10px 20px rgba(198, 198, 198, 0.15); border-radius: 12px;text-align:center;width:50%;margin:0% 0% 0% 25%;">
        <br />

        <p>@Html.LabelFor(model => model.Employee_Name) &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;    : &nbsp; &nbsp; @Html.EditorFor(model => model.Employee_Name, new { htmlAttributes = new { @class = "uppercase", @style = "width:200px;" } })</p>
        <p>@Html.LabelFor(model => model.Employee_Designation) &nbsp; &nbsp; : &nbsp; &nbsp; @Html.EditorFor(model => model.Employee_Designation, new { htmlAttributes = new { @class = "uppercase", @style = "width:200px;" } })</p>
        <p>@Html.LabelFor(model => model.Employee_Id) &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;: &nbsp; &nbsp; @Html.EditorFor(model => model.Employee_Id, new { htmlAttributes = new { @class = "uppercase", @style = "width:200px;" } })</p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-sm btn-secondary" id="Submit" style="width:75px;margin-left:20%;">Submit</button>
            </div>
        </div>
    </div>
</body>
</html>

