                                            <th style="display: none;">Final_Igst_Rs</th>
                                            <th style="display: none;">Final_Cgst_per</th>
                                            <th style="display: none;">Final_Cgst_Rs</th>
                                            <th style="display: none;">Final_Sgst_per</th>
                                            <th style="display: none;">Final_Sgst_Rs</th>
