@model Admin.Models.New_Purchase
@{
    var models = ViewBag.PM;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap-4.0.0.min.css">
    <script src="~/Scripts/bootstrap-4.0.0.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
    <link rel="stylesheet" href="~/Content/Purchase.css" />
    <style>
        @*table.scroll {
            border-spacing: 0;
            border: 2px solid black;
            width: auto;
        }

            table.scroll tbody,
            table.scroll thead {
                display: block;
            }

        thead tr th {
            height: 20px;
            line-height: 20px;
        }

        table.scroll tbody {
            height: 200px;
            overflow-y: auto;
            overflow-x: auto;
        }

        tbody {
            border-top: 2px solid black;
        }

            tbody td, thead th {
                border-right: 1px solid black;
            }

                tbody td:last-child, thead th:last-child {
                    border-right: none;
                }*@

        #list:hover {
            background-color: aliceblue;
        }
        #add_pd {
            width: 500px;
        }
        #add_submit{
            width:30%;
        }
    </style>
</head>
<body onload="total_cal(); hover();">
    <div class="container-fluid">
        <br />
        <div id="ui-view" data-select2-id="ui-view">
            <div>
                <div class="card">
                    <div class="card-header">
                        <p class="text-sm">
                            Purchase Order No:@Html.EditorFor(model => model.Purchase_Order_No, new { htmlAttributes = new { @style = "width:15%;margin-left:1%;", @readonly = "readonly" } })    Purchase Order Date :  @Html.TextBoxFor(x => x.Purchase_Order_Date, "{0:yyyy-MM-dd}", new { @type = "date", @style = "width:10%;margin-left:1%;" })
                            Reference No:@Html.EditorFor(model => model.Ref_No, new { htmlAttributes = new { @class = "uppercase", required = "required", style = "margin-left:1%;width:15%;" } })    Reference Date :  @Html.TextBoxFor(x => x.Ref_Date, "{0:yyyy-MM-dd}", new { @type = "date", @style = "width:10%;margin-left:1%;" })
                        </p>
                        <p class="text-sm"> &nbsp &nbsp Supplier : &nbsp &nbsp @Html.DropDownListFor(model => model.Supplier, ViewBag.MfdList as SelectList, new { htmlAttributes = new { @style = "width:20%;margin-left:1%;" } }) &nbsp &nbsp Project : &nbsp &nbsp @Html.DropDownListFor(model => model.Project, ViewBag.Project as SelectList, new { htmlAttributes = new { @style = "width:20%;margin-left:10%;" } })<a id="ToHide" class="btn btn-sm btn-secondary float-right mr-1 d-print-none" href="#" onclick="javascript:window.print();" data-ng-style="true"><i class="fa fa-print"></i> Print</a></p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <p class="text-sm">
                                Part No : <input id="Part_No" type="text" style="border: 1px solid gray;margin-left:0.5%;margin-right: 1%;width:15%;" class="uppercase" placeholder="Part No"><i class="fa fa-search" id="myBtn" style="margin-right:1%"></i> <i class="fa fa-plus" id="addproduct" style="margin-right:3%"></i>@Html.DisplayFor(model => model.Part_No)
                                Quantity : <input id="Quantity" type="text" style="border: 1px solid gray; margin-right: 6%; width: 10%;" placeholder="Quantity">
                                Price Per Unit : <input id="Purchase_Rate" type="text" style="border: 1px solid gray; width: 10%; margin-right: 2%;" placeholder="Purchase Rate">
                                <button class="btn btn-sm btn-secondary" id="Insert">Insert</button><button class="btn btn-sm btn-secondary" style="display: none; margin-top: 10px;" id="Add" onclick="ToAdd()">Add</button>
                            </p>
                            <div>
                                <p id="value" style="width:50%" class="text-sm"></p>
                            </div>
                            <div>
                                <p class="text-sm" style="display:none">
                                    Discount : <input id="Discount" type="text" style="border: 1px solid gray; margin-top: 10px; margin-right: 8.5%; width: 15%;" placeholder="Discount">
                                    Tax1 : <input id="Tax_1" type="text" style="border: 1px solid gray; margin-top: 10px; margin-right: 9.5%; width: 15%;" placeholder="Tax 1">
                                    Tax2 : <input id="Tax_2" type="text" style="border: 1px solid gray; margin-top: 10px; margin-right: 8%; width: 15%;" placeholder="Tax 2">
                                </p>
                            </div>
                            <div id="myModal" class="modal">

                                <!-- Modal content -->
                                <div class="modal-content">
                                    <p class="text-sm" style="text-align:center;"> Are you sure, you want to delete ?</p>
                                    <p class="text-sm" style="text-align:center;"><button class="btn btn-sm btn-secondary" style="width:5%;" id="yes">Yes</button><a href="@Url.Action("PO_List", "NewPurchase")"> <button class="btn btn-sm btn-secondary" style="width:5%;">No</button> </a> </p>
                                    <p id="delete" style="text-align:center;"></p>
                                </div>
                            </div>
                            <div style="overflow-y: auto; border-bottom: 1px solid #cacccb; height: 400px;">
                                <table id="selected_units" class="table text-sm font-weight-normal" style="margin-top:10px;">
                                    <thead>
                                        <tr>
                                            <th style="padding-right:50px">Part_No</th>
                                            <th style="padding-right:50px">Description</th>
                                            <th style="padding-right:10px">Quantity</th>
                                            <th style="padding-right:10px">Price</th>
                                            <th style="padding-right:10px">SubTotal</th>
                                            <th style="padding-right:10px">Total</th>
                                            <th style="padding-right: 30px">E/D</th>
                                            <th style="display: none;">Invoice_No</th>
                                            <th style="display: none;">Invoice_Date</th>
                                            <th style="display: none;">final_Qty</th>
                                            <th style="display: none;">final_Sub_Total</th>
                                            <th style="display: none;">final_total</th>
                                            <th style="display: none;">supplier</th>
                                            <th style="display: none;">project</th>
                                            <th style="display: none;">PO_Date</th>
                                            <th style="display: none;">PO_No</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int i = 0; }
                                        @foreach (System.Data.DataRow dr in ViewBag.PL.Rows)
                                        {

                                        <tr id="@i" style="font-size:13px;">
                                            <td class="row-data">@dr["P_Part_No"].ToString()</td>
                                            <td class="row-data text-sm-left">@dr["P_Description"].ToString()</td>
                                            <td class="row-data">@dr["PO_Qty"].ToString()</td>
                                            <td class="row-data">@dr["PO_Price"].ToString()</td>
                                            <td class="row-data">@dr["PO_SubTotal"].ToString()</td>
                                            <td class="row-data">@dr["PO_Total"].ToString()</td>
                                            <td class="row-data" style="margin-right:auto">
                                                <i class="fas fa-edit" onclick="Toshow()"></i> | <i class="fa fa-trash" onclick="del_row(this);"></i>
                                            </td>
                                            <td style="display:none;">
                                                @dr["Ref_No"].ToString()
                                            </td>
                                            <td style="display:none;">
                                                @dr["Ref_Date"].ToString()
                                            </td>
                                            <td style="display:none;" id="final_qty">
                                                @dr["PO_Final_Qty"].ToString()
                                            </td>
                                            <td style="display:none;" id="final_SubTotal">
                                                @dr["PO_Final_Total"].ToString()
                                            </td>
                                            <td style="display:none;" id="final_Total">
                                                @dr["PO_Final_Total"].ToString()
                                            </td>
                                            <td style="display:none;">
                                                @ViewBag.Mfr
                                            </td>
                                            <td style="display:none;">
                                                @ViewBag.Project
                                            </td>
                                            <td style="display:none;">
                                                @dr["PO_date"]
                                            </td>
                                            <td style="display:none;">
                                                @dr["PO_No"]
                                            </td>
                                        </tr>
                                            i++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div>
                                @Html.LabelFor(model => model.Quantity, new { htmlAttributes = new { id = "Qty_Label" } }) : <h6 id="Qty_display"></h6>
                            </div>
                            <div class="float-right">
                                <div>
                                    @Html.LabelFor(model => model.Total, new { htmlAttributes = new { id = "total_Label" } }) : <h6 id="total_display"></h6>
                                </div>
                                <div style="display:none;">
                                    @Html.LabelFor(model => model.Final_Discount) : @Html.EditorFor(model => model.Final_Discount, new { htmlAttributes = new { @id = "Final_Discount" } })
                                </div>
                                <div style="display:none;">
                                    @Html.LabelFor(model => model.Final_Tax1) : @Html.EditorFor(model => model.Final_Tax1, new { htmlAttributes = new { @style = "margin-left:11%;", @id = "Final_Tax1" } })
                                </div>
                                <div style="display:none;">
                                    @Html.LabelFor(model => model.Final_Tax2) : @Html.EditorFor(model => model.Final_Tax2, new { htmlAttributes = new { @style = "margin-left:11%;", @id = "Final_Tax2" } })
                                </div>
                                <div>
                                    @Html.LabelFor(model => model.Final_Total, new { htmlAttributes = new { id = "final_total_Label" } }) : <h6 id="Final_Total" style="margin-left:11%;"></h6>
                                </div>
                            </div>
                            <p id="del"></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <p id="Enter_Inv_No"></p>
        <p id="vno" style="background-color:yellow;width:20%"></p>
        @*<a href="@Url.Action("PurchaseList", "NewPurchase")"><button class="btn btn-sm btn-secondary" style="width:8%;" id="Edit">Edit</button></a>*@<button class="btn btn-sm btn-secondary" id="Submit" style="width:8%;">Submit</button>
        <pre id="json_op"></pre>
    </div>
</body>
</html>
<script>
    var last_row = document.getElementById("selected_units").rows.length;
    var row_id = 0;

    $('#yes').click(function (e) {
        var Inv_No = $('#Ref_No').val();
        var part = document.getElementById("selected_units").tBodies[0].rows.length;
        if (Inv_No == "" || part==0) {
            document.getElementById("Enter_Inv_No").innerHTML = "Enter Reference No (or) Table is Empty !!!";
            return;
        }
        else {
            var f1 = document.getElementById("Qty_display").innerHTML;
            var f2 = document.getElementById("total_display").innerHTML;
            var f6 = document.getElementById("Final_Total").innerHTML;
            document.getElementById("final_qty").innerHTML = f1;
            document.getElementById("final_SubTotal").innerHTML = f2;
            document.getElementById("final_Total").innerHTML = f6;
            var submit1 = "";
            document.getElementById("Enter_Inv_No").innerHTML = submit1;
            var myRows = [];
            var headersText = [];
            var $headers = $("#selected_units th");
            var $rows = $("#selected_units tbody tr").each(function (index) {
                $cells = $(this).find("td");
                myRows[index] = {};

                $cells.each(function (cellIndex) {
                    if (headersText[cellIndex] === undefined) {
                        headersText[cellIndex] = $($headers[cellIndex]).text();
                    }
                    myRows[index][headersText[cellIndex]] = $(this).text();
                });
            });

            var myObj = {
                "myrows": myRows
            };
            $.ajax({
                url: '/NewPurchase/Add_Deleted_PO',
                data: JSON.stringify(myRows),
                type: 'POST',
                contentType: "application/json; charset=utf - 8",
                dataType: 'json',
                success: function (result) {
                    var del = '<p style="color: red;">PO No : ' + result[0].PO_No + ' is Removed Successfully !!!</p>';
                    document.getElementById("delete").innerHTML = del;
                    setTimeout(function () {
                        window.location.href = "@Url.Action("PO_List", "NewPurchase")";
                    }, 2000);
                }
            });
            @*document.getElementById("json_op").innerHTML = JSON.stringify(myRows, undefined, 2);*@

        }
    });

    function freeze() {
        $('#Index_Type').prop('disabled', true);
        $('#Purchase_Order_No').prop('disabled', true);
        @*var date = @ViewBag.date;
        document.getElementById("Ref_Date").value = date;*@
    }

    var modal = document.getElementById("myModal");

    function hover() {
        modal.style.display = "block";
    }
    function total_cal() {
        $('#Purchase_Order_No').prop('disabled', true);
        $('#Purchase_Order_Date').prop('disabled', true);
        $('#Ref_No').prop('disabled', true);
        $('#Ref_Date').prop('disabled', true);
        $('#Supplier').prop('disabled', true);
        $('#Project').prop('disabled', true);
        $("#Part_No").val("");
        $("#Quantity").val("");
        $("#Purchase_Rate").val("");
        $("#P_Discount").val("");
        $("#P_Tax1").val("");
        $("#P_Tax2").val("");
        var table = document.getElementById("selected_units");
        var tbodyRowCount = table.tBodies[0].rows.length;
        var total_from_db = @ViewBag.Final_Total;
        var T_qty = 0;
        var T_subtotal = 0;
        var project = @ViewBag.Project_data;
        document.getElementById("Project").value = project;
        for (i = 0; i <= tbodyRowCount - 1; i++) {
            var p_qty = document.getElementById("selected_units").tBodies[0].rows[i].cells[2].innerHTML;
            var p_total = document.getElementById("selected_units").tBodies[0].rows[i].cells[5].innerHTML;
            T_qty = T_qty + parseFloat(p_qty);
            T_subtotal = T_subtotal + parseFloat(p_total);
        }
        document.getElementById("total_display").innerHTML = T_subtotal.toFixed(2);
        document.getElementById("Qty_display").innerHTML = T_qty;
        document.getElementById("Final_Total").innerHTML = T_subtotal.toFixed(2);
    }
</script>
