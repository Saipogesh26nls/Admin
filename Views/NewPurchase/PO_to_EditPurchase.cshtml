<script>
     var qty = 0;
    var total = 0;
    var final_total = 0;
    var i = 1;
    var val = "";
    var last_row = document.getElementById("selected_units").rows.length;
    $('#Insert').click(function () {
        var d1 = $('#Part_No').val();
        var d2 = parseInt(document.getElementById("Quantity").value);
        var d3 = $('#Purchase_Rate').val();
        var mfr = $('#sup_val').val();
        var project = $('#Project').val();
        var Invoice_No = document.getElementById("Ref_No").value;
        var Invoice_Date = $('#Ref_Date').val();
        var PO_Date = $("#Purchase_Order_Date").val();
        var PONo = $("#Purchase_Order_No").val();
        var billval = $("#billval").val();

        var last_row1 = document.getElementById("selected_units").tBodies[0].rows.length;
        var l_row1 = last_row1 - 1;
        var count = 1;
        for (var i = 0; i < l_row1; i++) {
            var e_part_no = document.getElementById("selected_units").tBodies[0].rows[count].cells[0].innerHTML;
            var e_partno = document.getElementById("Part_No").value;
            if (e_part_no == e_partno) {
                var qty_err = '<p style="color:red;">Part No is already exists !!!<p/>';
                document.getElementById("value").innerHTML = qty_err;
                return;
            }
            count++;
        }
        var subtotal = d2 * d3;
        @*if (d4 == "") {
            var discount = 0;
            var discount_per = 0;
        }
        else {
            var discount = (subtotal * d4) / 100;
            var discount_per = (discount / subtotal) * 100;
        }
        if (d5 == "") {
            var tax1 = 0;
            var tax1_per = 0;
        }
        else {
            var tax1 = (subtotal * d5) / 100;
            var tax1_per = (tax1 / subtotal) * 100;
        }
        if (d6 == "") {
            var tax2 = 0;
            var tax2_per = 0;
        }
        else {
            var tax2 = (subtotal * d6) / 100;
            var tax2_per = (tax2 / subtotal) * 100;
        }*@

        var qty_field = $('#Quantity').val();
        if (d1 == "" || d2 == "" || d3 == "" || Invoice_No == "") {
            document.getElementById("Qty_display").innerHTML = 0;
            document.getElementById("total_display").innerHTML = 0;
        }
        else {
            qty = qty + d2;
            var Total = subtotal;
            total = total + Total;
            document.getElementById("Qty_display").innerHTML = qty;
            document.getElementById("total_display").innerHTML = total.toFixed(2);
        }
        var model = new Object();
            model.Part_No = document.getElementById("Part_No").value;

            jQuery.ajax({
            type: "POST",
            url: "@Url.Action("P_to_DQ")",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ name: model }),
                success: function (data) {
                    if (d1 == "") {
                        var error = '<p style="color:red;">Enter Part No !!!<p/>';
                        document.getElementById("value").innerHTML = error;
                        return;
                    }
                    else if (qty_field == "" || qty_field == 0) {
                        var error = '<p style="color:red;">Enter Quantity !!!<p/>';
                        document.getElementById("value").innerHTML = error;
                        return;
                    }
                    @*else if (d3 == "" || d3 == 0) {
                        var error = '<p style="color:red;">Enter Price per unit !!!<p/>';
                        document.getElementById("value").innerHTML = error;
                        return;
                    }*@
                    else if (Invoice_No == "") {
                        var error = '<p style="color:red;">Enter Reference No !!!<p/>';
                        document.getElementById("value").innerHTML = error;
                        return;
                    }
                    else {
                        document.getElementById("value").innerHTML = val;
                        var l_row = last_row - 1;
                        var newrow = '<tr id="' + l_row + '" style="font-size:13px;"><td>' + d1 + '</td><td>' + data[0].Description + '</td><td id="Qty' + i + '">' + d2 + '</td><td>' + d3 + '</td><td>' + subtotal.toFixed(2) + '</td><td id="total' + i + '">' + Total.toFixed(2) + '</td><td class="row-data"><i class="fas fa-edit" onclick="Toshow()"></i> | <i class="fa fa-trash" onclick="del_row1(this);"></i></td><td style="display:none;">' + Invoice_No + '</td><td style="display:none;">' + Invoice_Date + '</td><td style="display:none;" class="row-data" id="final_qty"></td><td style="display:none;" class="row-data" id="final_SubTotal"></td><td id="final_Total" style="display:none;" class="row-data"></td><td style="display:none;" id="Mfr">' + mfr + '</td><td style="display:none;">' + project + '</td><td style="display:none;">' + PO_Date + '</td><td style="display:none;">' + PONo + '</td><td style="display:none;" id="billval">' + billval + '</td></tr>';
                        $('#selected_units tr:last').after(newrow);
                        total_cal();
                        i++;
                    }
                },
                failure: function (errMsg) {
                    alert(errMsg);
                }
            });
        final_calculation();
        formClear();
    });

    function formClear() {
        $("#Part_No").val("");
        $("#Quantity").val("");
        $("#Purchase_Rate").val("");
        $("#Discount").val("");
        $("#Tax_1").val("");
        $("#Tax_2").val("");
    }

    function total_cal() {
        $('#Purchase_Order_No').prop('disabled', true);
        $('#Purchase_Order_Date').prop('disabled', true);
        $('#Ref_No').prop('disabled', true);
        $('#Ref_Date').prop('disabled', true);
        $('#Supplier').prop('disabled', true);
        $('#Project').prop('disabled', true);
        $("#Part_No").val("");
        $("#Quantity").val("");
        $("#Purchase_Rate").val("");
        $("#P_Discount").val("");
        $("#P_Tax1").val("");
        $("#P_Tax2").val("");
        var table = document.getElementById("selected_units");
        var tbodyRowCount = table.tBodies[0].rows.length;
        var total_from_db = @ViewBag.Final_Total;
        var T_qty = 0;
        var T_subtotal = 0;
        var project = @ViewBag.Project_data;
        var Total_tax = @ViewBag.Final_Tax;
        document.getElementById("Project").value = project;
        for (i = 0; i <= tbodyRowCount - 1; i++) {
            var p_qty = document.getElementById("selected_units").tBodies[0].rows[i].cells[2].innerHTML;
            var p_total = document.getElementById("selected_units").tBodies[0].rows[i].cells[5].innerHTML;
            T_qty = T_qty + parseFloat(p_qty);
            T_subtotal = T_subtotal + parseFloat(p_total);
        }

        document.getElementById("total_display").innerHTML = T_subtotal.toFixed(2);
        document.getElementById("Qty_display").innerHTML = T_qty;
        document.getElementById("total_tax").innerHTML = Total_tax;
        var finaltotal = T_subtotal + Total_tax;
        document.getElementById("Final_Total").innerHTML = finaltotal.toFixed(2);

    }

    function final_calculation() {
        var sub_total = document.getElementById("total_display").innerHTML;
        var final_tax1 = $("#Final_Tax1").val();
        if (final_tax1 == "") {
            var tax1_val = 0;
        }
        else {
            var tax1_val = (sub_total * final_tax1) / 100;
            document.getElementById("total_tax").innerHTML = tax1_val.toFixed(2);
        }
        var Total = parseFloat(sub_total) + parseFloat(tax1_val);
        document.getElementById("Final_Total").innerHTML = Total.toFixed(2);
    }

    function Toshow() {
        var rowId =
            event.target.parentNode.parentNode.id;
        row_id = rowId;
        var data =
            document.getElementById(rowId).querySelectorAll(".row-data");

        var part_no = data[0].innerHTML;
        var p_qty = data[2].innerHTML;
        var p_rate = data[3].innerHTML;

        document.getElementById("Part_No").value = part_no;
        document.getElementById("Quantity").value = p_qty;
        document.getElementById("Purchase_Rate").value = p_rate;

        document.getElementById("Insert").style.display = "none";
        document.getElementById("Add").style.display = "block";
    }

    function ToAdd() {
        document.getElementById("Insert").style.display = "block";
        document.getElementById("Add").style.display = "none";

        var rowId = row_id;
        var data =
            document.getElementById(rowId).querySelectorAll(".row-data");

        var part_no = document.getElementById("Part_No").value;
        var p_qty = document.getElementById("Quantity").value;
        var p_rate = document.getElementById("Purchase_Rate").value;

        @*var last_row1 = document.getElementById("selected_units").tBodies[0].rows.length;
        var l_row1 = last_row1 - 1;
        var count = 0;
        for (var i = 0; i < l_row1; i++) {
            var e_part_no = document.getElementById("selected_units").tBodies[0].rows[count].cells[0].innerHTML;
            var e_partno = document.getElementById("Part_No").value;
            if (e_part_no == e_partno) {
                var qty_err = '<p style="color:red;">Part No is already exists !!!<p/>';
                document.getElementById("value").innerHTML = qty_err;
                return;
            }
            count++;
        }*@
        var subtotal = p_qty * p_rate;
        var total = subtotal;

        data[0].innerHTML = part_no;
        data[2].innerHTML = p_qty;
        data[3].innerHTML = p_rate;
        data[4].innerHTML = subtotal;
        data[5].innerHTML = total;

        total_cal();
    }

