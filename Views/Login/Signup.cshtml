@{
    ViewBag.Title = "Log_User_List";
}
<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="~/Scripts/jquery-3.5.1.min.js"></script>
</head>
<body>
    <br />
    <p>
        @Html.ActionLink("Add New User", "CreateUser")
    </p>
    <table class="table" id="selected_units">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roll_Name)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Permission_Detail)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
                <tr id="@i">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roll_Name)
                    </td>
                    <td style="text-align:center">
                        View @Html.EditorFor(modelItem => item.View, new { htmlAttributes = new { disabled = "disabled" } }) &nbsp; &nbsp; Add @Html.EditorFor(modelItem => item.Add, new { htmlAttributes = new { disabled = "disabled" } }) &nbsp; &nbsp; Edit @Html.EditorFor(modelItem => item.Edit, new { htmlAttributes = new { disabled = "disabled" } }) &nbsp; &nbsp; Delete @Html.EditorFor(modelItem => item.Delete, new { htmlAttributes = new { disabled = "disabled" } })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</body>
</html>
